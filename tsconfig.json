{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        // "module": "es2015", // "module": "ESNext", 时必须设置"moduleResolution": "node",
        "module": "commonjs",
        // "moduleResolution": "node",
        // "target": "es2015",
        "removeComments": true,
        "skipLibCheck": true, // 解決 TypeScript error: Duplicate identifier 'LibraryManagedAttributes'
        "jsx": "react",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types/", "./typings/"]
    },
    "include": [
        "./src/**/*",
        "./mock/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}